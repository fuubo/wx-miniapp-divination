page {
  width: 100vw;
  height: 100vh;
}
page,view,image,input {
  display: block;
  box-sizing: border-box;
}

.container {
  width: 100vw;
  height: 100vh;
}

.search {
  margin-top: 32rpx;
  position: relative;
  width: 700rpx;
  height: 66rpx;
}
.search input {
  border: 1rpx solid #e3e3e3;
  width: 700rpx;
  height: 66rpx;
  border-radius: 30rpx;
  padding-left: 32rpx; 
}
.search image {
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  top: 16rpx;
  right: 32rpx;
}

.content-container {
  width: 100vw;
  height: 100%;
  margin-top: 32rpx;
  display: flex;
}

.category-container {
  width: 180rpx;
  height: 100%;
}

.category-container .category {
  padding: 30rpx 0rpx;
  text-align: center;
}

.category-container .category.active {
  background: #fff;
  border-left: 4rpx solid #000000;
}

.category-container .category .name {
  display: inline-block;
  font-size: 28rpx;
  color: #646464;
  line-height: 1.2;
  text-align: left;
  pointer-events: none;
}

.category-container .category .name.active {
  color: #000000;
  font-weight: bold;
}

.goods-container .goods {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  position: relative;
  padding: 20rpx 30rpx;
  line-height: 40rpx;
  border-bottom: 1px solid #f7f7f7;
}
.goods-container .goods .name {
  color: #000;
  font-size: 26rpx;
  line-height: 46rpx;
  font-weight: bold;
}