page {
  background-color: #fff;
}

.active {
  transform: scale(1.3);
  transition: all .5s ease-in 0s;
  z-index: 20;
}

.common {
  transform: scale(1);
  transition: all .5s ease-in 0s;
  z-index: 0;
}

.section-row {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-top: 80rpx;
}

.section-column {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}

.logo {
  margin-top: 20rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
}

.text-company {
  margin-left: 80rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.text-slogan {
  margin-left: 80rpx;
  margin-top: 30rpx;
  font-size: 24rpx;
  color: rgb(77, 73, 73);
}

.text-title {
  margin-left: 80rpx;
  font-size: 26rpx;
  font-weight: 450;
}

.text-subtitle {
  margin-left: 80rpx;
  font-size: 23rpx;
  margin-top: 18rpx;
  color: rgb(77, 73, 73);
}

.line-space {
  margin-top: 30rpx;
  height: 10rpx;
  background-color: #f6f6f6;
}

.master-card {
  width: 88%;
  margin-top: 30rpx;
  margin-left: 6%;
  height: 220rpx;
  background-color: #f6f6f6;
}

.text-master-name {
  font-size: 26rpx;
  font-weight: 450;
}

.text-master-skill {
  margin-top: 18rpx;
  font-size: 23rpx;
  color: rgb(77, 73, 73);
}

.text-master-subscribe {
  margin-top: 15rpx;
  font-size: 20rpx;
  color: #a5a4a4;
}

.section-border {
  margin-left: 39rpx;
  margin-right: 39rpx;
}